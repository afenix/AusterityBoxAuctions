<h2>Add a lot!</h2>
<form>
  <div class="form-group">
    <label for="item_type">Lot Name</label>
    {{input id="item_type" class="form-control" value=item_type}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{input id="description" type="text" class="form-control" value=description}}
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    {{input id="date" type="text" class="form-control" value=date}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>

</form>
