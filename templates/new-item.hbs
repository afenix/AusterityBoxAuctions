<h3>Add an item!</h3>
<form>
  <div class="form-group">
    <label for="Name">Item Name</label>
    {{input id="name" class="form-control" value=name}}
  </div>

  <div class="form-group">
    <label for="description" class="form-label">Description</label>
    {{textarea id="description" type="text" class="form-control" value=description}}
  </div>

  <div class="form-group">
    <label for="owner" class="form-label">Owner</label>
    {{input id="owner" type="text" class="form-control" value=owner}}
  </div>

  <div class="form-group">
    <label for="bidnumber" class="form-label">Bid Number</label>
    {{input id="bidnumber" type="number" class="form-control" value=bidnumber}}
  </div>

  <div class="form-group">
    <label for="eststartprice" class="form-label">Starting Bid</label>
    {{input id="eststartprice" type="text" class="form-control" value=eststartprice}}
  </div>

  <div class="form-group">
    <label for="backstory" class="form-label">Backstory</label>
    {{textarea id="backstory" type="text" class="form-control" value=backstory}}
  </div>

  <div class="form-group">
    <label for="date" class="form-label">Date acquired</label>
    {{input id="date" type="date" class="form-control" value=date}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>

</form>
